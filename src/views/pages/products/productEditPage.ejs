<section class="main__header">
    <div class="header__content">
        <h2>Editar producto <span class="header__id" data-id="<%= data.product.product_id %>">(id: <%= data.product.product_id %>)</span></h2>
    </div>

    <div class="header__btn-container">
        <a href="/product/new" class="btn">
            <iconify-icon icon="tabler:xbox-x"></iconify-icon>
            <span>Cancelar</span>
        </a>
        <a href="/product/<%= data.product.product_id %>/edit" class="btn">
            <iconify-icon icon="tabler:edit"></iconify-icon>
            <span>Guardar</span>
        </a>
    </div>

</section>
<form class="main__body-column">

    <section class="main__body-column__left">

        <section class="wrapper">
            <div class="wrapper__header">
                <h2 class="wrapper__subtitle">General</h2>
            </div>
            <div class="wrapper__body">
                <div class="wrapper__group">
                    <div class="w-article__inputs-row">
                        <label class="label">
                            <span>Nombre</span>
                            <input class="input-text" type="text" name="product_name" value="<%= data.product.product_name %>">
                        </label>
                        
                        <label for="brand_id" class="label">
                            <span>Marca</span>
                            <select name="brand_id" class="input-select">
                                <% data.brands.forEach(brand => { %>
                                    <option value="<%= brand.brand_id %>" <%= data.product.brand_id == brand.brand_id ? 'selected' : '' %>><%= brand.brand_name %></option>
                                    <% }) %>
                                </select>
                            </label>
                        </div>

                    <div class="w-article__inputs-row">
                        <label class="label">
                            <span>Descripción</span>
                            <textarea class="input-textarea" name="product_description"><%= data.product.product_description %></textarea> 
                        </label>
                    </div>
                </div>
                <div class="wrapper__row">
                    <label for="product_ml" class="label">
                        <span>ML</span>
                        <input class="input-text" type="number" name="product_ml" value="<%= data.product.product_ml %>">
                    </label>
                    <label for="product_notes" class="label">
                        <span>Notas</span>
                        <input class="input-text" type="text" name="product_notes" value="<%= data.product.product_notes %>">
                    </label>
                    <label for="product_gender" class="label">
                        <span>Genero</span>
                        <select name="product_gender"  class="input-select">
                            <option value="Masculino" <%= data.product.product_gender == 'Masculino' ? 'selected' : '' %>>Masculino</option>
                            <option value="Femenino" <%= data.product.product_gender == 'Femenino' ? 'selected' : '' %>>Femenino</option>
                            <option value="Unisex" <%= data.product.product_gender == 'Unisex' ? 'selected' : '' %>>Unisex</option>
                            <option value="Fragancias" <%= data.product.product_gender == 'Fragancias' ? 'selected' : '' %>>Fragancias</option>
                        </select>
                    </label>
                    <label for="product_type" class="label">
                        <span>Tipo</span>
                        <select name="product_type"  class="input-select">
                            <option value="Eau de Parfum" <%= data.product.product_type == 'Eau de Parfum' ? 'selected' : '' %>>Eau de Parfum</option>
                            <option value="Eau de Toilette" <%= data.product.product_type == 'Eau de Toilette' ? 'selected' : '' %>>Eau de Toilette</option>
                            <option value="Desodorante" <%= data.product.product_type == 'Desodorante' ? 'selected' : '' %>>Desodorante</option>
                            <option value="After Shave" <%= data.product.product_type == 'After Shave' ? 'selected' : '' %>>After Shave</option>
                        </select>
                    </label>
                </div>
            </div>
        </section>


        <section class="wrapper">
            <div class="wrapper__body">
                <div class="wrapper__row wrapper__row--cost">

                    <label class="label">
                        <span>SKU</span>
                        <input class="input-text" type="number" name="product_name" value="<%= data.product.product_sku %>">
                    </label>
                    <label for="product_stock" class="label">
                        <span>Stock</span>
                        <input class="input-text" type="number" name="product_stock" value="<%= data.product.product_stock %>">
                    </label>
                    <label for="product_price" class="label">
                        <span>Precio Lista</span>
                        <input class="input-text" type="number" name="product_price" value="<%= data.product.product_price %>">
                    </label>
                    <label for="product_price" class="label">
                        <span>Precio Venta</span>
                        <input class="input-text" type="number" name="product_price" value="<%= data.product.product_price %>">
                    </label>
                    <label for="product_discount" class="label">
                        <span>Descuento</span>
                        <input class="input-text" type="number" name="product_discount" value="<%= data.product.product_discount %>">
                    </label>
                    <label for="product_payments" class="label">
                        <span>Cuotas</span>
                        <select name="product_payments" class="input-select">
                            <% data.payments.forEach(payment => { %>
                                <option value="<%= payment.payment_id %>"><%= payment.payment_quantity %> - <%= payment.payment_interest %>% de interés</option>
                            <% }) %>
                        </select>
                    </label>
                </div>
                
            </div>
        </section>
        <section class="wrapper wrapper--delete">
            <div class="wrapper__header">
                <h2 class="wrapper__subtitle">Eliminar</h2>
            </div>
            <div class="wrapper__body">
                <div class="wrapper__group">
                    <span>Esta accion eliminara definitivamente el producto y no se puede deshacer</span>
                    <button class="btn btn--danger" data-id="<%= data.product.product_id %>">Eliminar</button>
                </div>
            </div>
        </section>
    </section>
<!-- ----------------------------------------------------------------------------  -->
    <section class="main__body-column__right">
        <section class="wrapper">
            <div class="wrapper__body">
                <div class="wrapper__row">
                    <div class="wrapper__item">
                        <p class="wrapper__item__key">Creado</p>
                        <p class="wrapper__item__value">26/01/2023</p>
                    </div>
                    <div class="wrapper__item">
                        <p class="wrapper__item__key">Modificado</p>
                        <p class="wrapper__item__value">14/05/2023</p>
                    </div>
                    <div class="wrapper__item">
                        <p class="wrapper__item__key">Estado</p>
                        <div>
                            <span class="badge badge--green">ACTIVO</span>
                            <span class="badge badge--blue">NUEVO</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="wrapper">
            <div class="wrapper__header">
                <h2 class="wrapper__subtitle">Imagenes</h2>
            </div>
            <div class="wrapper__body">
                <div class="wrapper__img-container">
                    <img src="<%= data.product.product_img %>" alt="<%= data.product.product_name %>">
                    </p>
                </div>
            </div>
        </section>
    </section>


</form>