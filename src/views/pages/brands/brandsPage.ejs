<section class="main__header">
    <div class="main__content">
        <h2>Marcas</h2>
        <p>Administraci√≥n de marcas</p>
    </div>
</section>
<section class="main__body">
    <section>
        <section class="wrapper">
            <div class="panel-info">
                <a href="/brand/all" class="panel-info__item panel-info__item--link">
                    <iconify-icon icon="tabler:perfume"></iconify-icon>
                    <div>
                        <p class="panel-info__label">Total de Marcas</p>
                        <p class="panel-info__value">
                            50
                        </p>
                    </div>
                </a>
                
                <div class="panel-info__btn-container">
                    <button id="btn-filters" class="btn" type="button">
                        <iconify-icon icon="tabler:filter"></iconify-icon>
                        <span>Filtros</span>
                    </button>
                    <button id="btn-actions" class="btn" type="button">
                        <iconify-icon icon="tabler:apps"></iconify-icon>
                        <span>Acciones</span>
                    </button>
                    <a href="/brand/new" class="btn btn--green">
                        <iconify-icon icon="tabler:circle-plus"></iconify-icon>
                        <span>Nueva marca</span>
                    </a>
                </div>
            </div>
        </section>

    </section>

    <section class="wrapper">
        <div class="wrapper__body">
            <table id="panel-table" class="table">
                <thead class="table__head">
                    <tr class="table__row-head">
                        <th class="table__cell table__cell--fit"><input class="checkbox" type="checkbox" name="" id="checkbox-all"></th>
                        <th class="table__cell">Nombre</th>
                        <th class="table__cell table__cell--fit">Estado</th>
                        <th class="table__cell table__cell--fit"></th>
                    </tr>
                </thead>
                <tbody class="table__body">
                    <% data.brands.forEach((brand)=> { %>
                        <tr class="table__row">
                            <td class="table__cell table__cell--fit">
                                <input class="checkbox action-checkbox" type="checkbox" name="<%= brand.brand_id %>">
                            </td>
                            <td class="table__cell">
                                <a href="/brand/<%= brand.brand_id %>" class="link link--table">
                                    <%= brand.brand_name %>
                                </a>
                            </td>
                            <td class="table__cell table__cell--fit">
                                <% if (brand.brand_status==1) { %>
                                    <span class="badge badge--green">activo</span>
                                    <% } else { %>
                                        <span class="badge badge--red">inactivo</span>
                                        <% } %>
                            </td>
                            <td class="table__cell table__cell--fit">
                                <a href="/brand/<%= brand.brand_id %>/edit" class="btn-table"><iconify-icon
                                        icon="tabler:edit"></iconify-icon></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</section>