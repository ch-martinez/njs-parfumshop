<section class="main__header">
    <div class="main__content">
        <h2><a href="/customer/<%= data.customer.customer_id %>"><%= data.customer.customer_name %> <%= data.customer.customer_lastname %></a>
             > Direcciones</h2>
        <p>Administraci√≥n de las direcciones del cliente</p>
    </div>
    <div class="header__btn-container">
        <button class="btn btn--gray" id="btnBack">
            <iconify-icon icon="tabler:arrow-back-up"></iconify-icon>
            <span>Volver</span>
        </button>
        <a href="/customer/new" class="btn btn--green">
            <iconify-icon icon="tabler:circle-plus"></iconify-icon>
            <span>Agergar direccion</span>
        </a>
        
    </div>
</section>
<section class="main__body">

    <section class="wrapper">
        <div class="wrapper__header">
            <h2 class="wrapper__subtitle">Listado de direcciones</h2>
        </div>
        <div class="wrapper__body">
            <table id="panel-table" class="table">
                <thead class="table__head">
                    <tr class="table__row-head">
                        <th class="table__cell"><input class="checkbox" type="checkbox" name="" id="checkbox-all"></th>
                        <th class="table__cell">Direccion</th>
                        <th class="table__cell">Ciudad</th>
                        <th class="table__cell">Provincia</th>
                        <th class="table__cell">Cod. Postal</th>
                        <th class="table__cell"></th>
                    </tr>
                </thead>
                <tbody class="table__body">
                    <% data.addressList.forEach((address) => {%>
                        <tr class="table__row">
                            <td class="table__cell">
                                <input class="checkbox action-checkbox" type="checkbox" name="">
                            </td>
                            <td class="table__cell">
                                <a href="/customer/<%= data.customer.customer_id %>/caddress/<%= address.caddress_id %>">
                                    <%= address.caddress_full %>
                                </a>
                            </td>
                            <td class="table__cell">
                                <%= address.caddress_city %>
                            </td>
                            <td class="table__cell">
                                <%= address.caddress_state %>
                            </td>
                            <td class="table__cell">
                                <%= address.caddress_zip %>
                            </td>
                            <td class="table__cell">
                                <a href="/caddress/<%= address.caddress_id %>/edit" class="btn-table"><iconify-icon icon="tabler:edit"></iconify-icon></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</section>